<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>
<odoo>
   
  <!-- Inherited Form View Of Student -->
    <record id="view_student_student_form_fee" model="ir.ui.view">
        <field name="name">student.student.form.fee</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_1"/>
        <field name="arch" type="xml">
            <data>
				<xpath expr="//sheet/group[2]" position="after">
                	<group string="Fee Information">
						<!-- <field name="fees_structure" required='1'/> -->
                        <field name="product_list_id"/>
					</group>
				</xpath>
            </data>
        </field>
    </record>
 
  	<!-- Inherited Form View Of Student -->
  	<record id="view_student_promotion_form_fee" model="ir.ui.view">
        <field name="name">student.promotion.form</field>
        <field name="model">student.promotion</field>
        <field name="inherit_id" ref="school.view_student_promotion_form"/>
        <field name="arch" type="xml">
            <data>
				<xpath expr="//field[@name='standard_id_to']" position="after">
                	<field name="fees_structure" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                	<field name="journal_id"  domain="[('type','=','sale')]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                	<field name="product_list_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                	
				</xpath>
            </data>
        </field>
    </record>  
	    
  	<!-- Inherited Tree of Promotion Lines -->
 	<record id="view_student_promotion_line_tree_inherit" model="ir.ui.view">
        <field name="name">student.promotion.line.tree</field>
        <field name="model">student.promotion.line</field>
        <field name="inherit_id" ref="school.view_student_promotion_line_tree"/>
        <field name="arch" type="xml">
			<field name="name" position="after">
				<!-- <field name="fees_structure"/> -->
				<!-- <field name="fees_structure_new"/> -->
				<field name="product_list_id"/>
				<field name="product_list_id_new"/>
	        </field>
	    </field>
    </record>

</odoo>
