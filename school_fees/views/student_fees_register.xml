<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>

<odoo>
    <template id="student_fees_register">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                    	<t t-set="currency" t-value="0"/>
                    	<t t-set="paid_amount" t-value="0"/>
                    	<t t-set="due_amount" t-value="0"/>
                                
                        <div class="oe_structure" />
                        <div class="row" align="center">
                            <span>
                                <h1>Student Payroll Register</h1>
                            </span>
                        </div>
                        <div class="row" align="center" style="font-family: 'Helvetica';font-size: 20px;margin-left:5px;">
                            <span>
                                <b t-field="o.name"></b>
                            </span>
                        </div>
                        <div class="row" align="center" style="font-family: 'Helvetica';font-size: 20px;margin-left:5px;">
                            <span>For the month of &#160;</span>
                            <span t-esc="get_month(o.date)"></span>
                        </div>
                        <br />
                        <br />
                        <table width="100%">
                            <tr>
                                <td width="15%" style="font-family: 'Helvetica';font-size: 18px;">
                                    <b>Number</b>
                                </td>
                                <td width="5%">
                                    <b>:</b>
                                </td>
                                <td width="80%" style="font-family: 'Helvetica';font-size: 16px;">
                                    <span t-field="o.number"></span>
                                </td>
                            </tr>
                            <tr>
                                <td width="15%" style="font-family: 'Helvetica';font-size: 18px;">
                                    <b>Date</b>
                                </td>
                                <td width="5%">
                                    <b>:</b>
                                </td>
                                <td width="80%" style="font-family: 'Helvetica';font-size: 16px;">
                                    <span t-esc="time.strftime('%Y-%m-%d')"></span>
                                </td>
                            </tr>
                        </table>
                        <br />
                        <table width="100%" class="table table-striped">
                            <thead>
                                <tr>
                                    <td width="5%" style="font-family: 'Helvetica';font-size: 18px;border: 1px solid black;" align="center">
                                        <b>#</b>
                                    </td>
                                    <td width="35%" align="left" style="font-family: 'Helvetica';font-size: 18px;border: 1px solid black;">
                                        <b>Student Name</b>
                                    </td>
                                    <td align="right" width="20%" style="font-family: 'Helvetica';font-size: 18px;border: 1px solid black;">
                                        <b>Total</b>
                                    </td>
                                    <td align="right" width="20%" style="font-family: 'Helvetica';font-size: 18px;border: 1px solid black;">
                                        <b>Amount Paid</b>
                                    </td>
                                    <td align="right" width="20%" style="font-family: 'Helvetica';font-size: 18px;border: 1px solid black;">
                                        <b>Due Amount</b>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="o.line_ids" t-as="l">
                                    <t t-set="counter" t-value="counter+1"/>
                                    <t t-set="paid_amount" t-value="paid_amount+l.paid_amount"/>
                                    <t t-set="due_amount" t-value="due_amount+l.due_amount"/>
                                    <t t-set="currency" t-value="l.currency_id"/>
                                    <tr>
                                        <td width="5%" align="center" style="font-family: 'Helvetica';font-size: 16px;border: 1px solid black;">
                                            <span><t t-esc="counter"></t></span>
                                        </td>
                                       
                                        <td width="35%" align="left" style="font-family: 'Helvetica';font-size: 16px;border: 1px solid black;">
                                            <span t-field="l.student_id.name"></span>
                                        </td>
                                        <td align="right" width="20%" style="font-family: 'Helvetica';font-size: 16px;border: 1px solid black;">
                                            <span t-esc="l.total"></span>
                                        </td>
                                        <td align="right" width="20%" style="font-family: 'Helvetica';font-size: 16px;border: 1px solid black;">
                                            <span t-esc="l.paid_amount"></span>
                                        </td>
                                        <td align="right" width="20%" style="font-family: 'Helvetica';font-size: 16px;border: 1px solid black;">
                                            <span t-esc="l.due_amount" t-options='{"widget": "monetary","display_currency": l.currency_id}'></span>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                      
                                  
                      
                      <div class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr>
                                        <td><strong>Total Fees</strong></td>
                                        <td class="text-right">
                                        
                                         <span t-esc="o.total_amount" t-options='{"widget": "monetary","display_currency": currency}'></span>
                                          </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Amount Paid</strong></td>
                                      <td class="text-right">
                                       <span><t t-esc="paid_amount" t-options='{"widget": "monetary","display_currency": currency}'></t></span>
                                      </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td><strong>Due Amount</strong></td>
                                        <td class="text-right">
                                       <span><t t-esc="due_amount" t-options='{"widget": "monetary","display_currency": currency}'></t></span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-xs-4 pull-right">
                            <br/><br/><br/><br/><br/><br/><br/>
                            <b>Principal,</b>
                            <br/><br/><br/>
                            <span style="font-family: 'Helvetica';font-size: 16px;">Authorized Signature</span>
                            <br />
                       </div>
                      
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
