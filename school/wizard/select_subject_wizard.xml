<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Assign Roll Number Wizard Form View  -->

        <record id="view_select_subject_wizard_form" model="ir.ui.view">
            <field name="name">select.subject.wizard.form</field>
            <field name="model">select.subject</field>
            <field name="arch" type="xml">
                <form string="Subjects Selection">
                    <group>
                        <field name="semester_id" widget="selection" invisible="1"/>
                        <field name="electives_wiz_ids" domain="[('subject_type','=','elective')]"/>
                    </group>
                    <footer>
                        <button icon="gtk-cancel" special="cancel" string="Close"/>
                        <button icon="gtk-go-forward" name="subject_selected" string="Submit" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Action of report wizard -->
        <act_window id="select_subject_wizard_config"
            multi="True"
            name="Select Subject"
            res_model="select.subject"
            view_id="view_select_subject_wizard_form"
            view_mode="form" target="new" view_type="form" /> 

    </data>
</openerp>