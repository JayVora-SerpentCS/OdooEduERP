        <field name="arch" type="xml">
            <search string="Search">
                <field name="student_id" />
                <field name="standard_id" />
                <group expand="1" string="Group By">
                    <filter
                        name="student"
                        string="Student"
                        help="By Name"
                        domain="[]"
                        context="{'group_by':'student_id'}"
                    />
                    <filter
                        name="standard"
                        string="Standard"
                        help="By Name"
                        domain="[]"
                        context="{'group_by':'standard_id'}"
                    />
                </group>
            </search>
        </field>
