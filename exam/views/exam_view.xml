<?xml version="1.0" ?>
<odoo>

    <!-- Actions Of Form & Tree Views Of Student Result -->
    <record id="action_stu_result_form" model="ir.actions.act_window">
        <field name="name">Result</field>
        <field name="res_model">exam.result</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_student_id': active_id}</field>
    </record>

    <!-- Inherited Form View Of Student -->
    <record id="view_student_student_form2" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_1" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button
                        name="%(action_stu_result_form)d"
                        class="oe_inline oe_stat_button"
                        type="action"
                        attrs="{'invisible':[('state', 'in', ['draft','terminate','alumni','cancel'])]}"
                        groups="school.group_school_administration,school.group_school_teacher,school.group_school_student"
                    >
                        <img
                            src="/school/static/description/result.png"
                            alt="Logo"
                            style="margin-left:20px;"
                        />
                        <lable style="margin-left:20px;">Result</lable>
                    </button>
                </xpath>
            </data>
        </field>
    </record>

    <!-- Tree View Of Exam Information -->
    <record id="view_exam_exam_tree" model="ir.ui.view">
        <field name="name">exam.exam.tree</field>
        <field name="model">exam.exam</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" select="1" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="write_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- Search View Of Exam Information -->
    <record id="view_exam_exam_search" model="ir.ui.view">
        <field name="name">exam.exam.search</field>
        <field name="model">exam.exam</field>
        <field name="arch" type="xml">
            <search string="Exam Information Search">
                <field name="exam_code" string="Exam Code" />
                <field name="name" string="Name" />
                <field name="start_date" string="Start Date" />
                <field name="end_date" string="End Date" />
                <newline />
                <filter
                    name="running"
                    string="Running"
                    domain="[('state','=','running')]"
                    help="Exam is Running"
                />
                <filter
                    name="uncomming"
                    string="Upcoming"
                    domain="[('state','=','draft')]"
                    help="Exam is Upcoming"
                />
                <newline />
                <group expand="1" string="Group By">
                    <filter
                        name="date"
                        string="Date"
                        help="By Date"
                        domain="[]"
                        context="{'group_by':'start_date'}"
                    />
                    <filter
                        name="state"
                        string="State"
                        help="By State"
                        domain="[]"
                        context="{'group_by':'state'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- Form View Of Exam Information -->
    <record id="view_exam_exam_form" model="ir.ui.view">
        <field name="name">exam.exam.form</field>
        <field name="model">exam.exam</field>
        <field name="arch" type="xml">
            <form string="Exam Information">
                <header>
                    <button
                        name="set_to_draft"
                        string="Set to Draft"
                        type="object"
                        states="cancelled"
                        groups="school.group_school_administration,school.group_school_teacher"
                    />
                    <button
                        name="set_running"
                        string="Start"
                        type="object"
                        states="draft"
                        groups="school.group_school_administration,school.group_school_teacher"
                    />
                    <button
                        name="set_finish"
                        string="Finish"
                        type="object"
                        states="running"
                        groups="school.group_school_administration,school.group_school_teacher"
                    />
                    <button
                        name="set_cancel"
                        string="Cancel"
                        type="object"
                        states="draft,running"
                        groups="school.group_school_administration,school.group_school_teacher"
                    />
                    <field name="state" nolabel="1" widget="statusbar" string="State" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="generate_result"
                            string="Generate result"
                            type="object"
                            class="oe_stat_button fa fa-graduation-cap"
                            attrs="{'invisible':[('state','in',['draft','running','cancelled'])]}"
                            groups="school.group_school_teacher,school.group_school_administration"
                        />
                    </div>
                    <group attrs="{'readonly': [('state','!=','draft')]}">
                        <separator string="Exam Detail" colspan="4" />
                        <group col="2">
                            <field name="exam_code" string="Exam Code" />
                            <field
                                name="grade_system"
                                string="Grade System"
                                required="1"
                                attrs="{'readonly': [('state','!=','draft')]}"
                                widget="selection"
                            />
                            <field
                                name="start_date"
                                attrs="{'readonly': [('state','!=','draft')]}"
                                placeholder="Start Date"
                                required="1"
                            />
                        </group>
                        <group col="2">
                            <field
                                name="name"
                                placeholder="Exam Name"
                                attrs="{'readonly': [('state','!=','draft')]}"
                            />
                            <field
                                name="academic_year"
                                string="Academic Year"
                                placeholder="Select Academic Year.."
                                widget="selection"
                                required="1"
                                attrs="{'readonly': [('state','!=','draft')]}"
                            />
                            <field
                                name="end_date"
                                attrs="{'readonly': [('state','!=','draft')]}"
                                placeholder="End Date"
                                required="1"
                            />

                        </group>
                    </group>
                    <group col="4" colspan="4">
                        <notebook colspan="4">
                            <page string="Class">
                                <field
                                    name="standard_id"
                                    nolabel="1"
                                    colspan="4"
                                    attrs="{'readonly': [('state','!=','draft')]}"
                                    options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                />
                            </page>
                            <page string="Exam Schedule">
                                <field
                                    name="exam_schedule_ids"
                                    nolabel="1"
                                    colspan="4"
                                    attrs="{'readonly': [('state','!=','draft')]}"
                                    context="{'default_standard_ids':standard_id,'academic_year':academic_year}"
                                >
                                    <tree editable="top">
                                        <field name="standard_ids" invisible="1" />
                                        <field
                                            name="standard_id"
                                            domain="[('standard_id', 'in', standard_ids)]"
                                            required="1"
                                            options="{&quot;no_create&quot;: True}"
                                            string="Class"
                                        />
                                        <field
                                            name="timetable_id"
                                            required="1"
                                            domain="[('timetable_type','=','exam'),
                                                                                         ('year_id','=',context.get('academic_year')),
                                                                                         ('standard_id','=',standard_id)]"
                                            options="{&quot;no_create&quot;: True}"
                                        />
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </group>
                    <group
                        col="6"
                        colspan="4"
                        attrs="{'readonly': [('state','!=','draft')]}"
                    >
                        <field
                            name="create_date"
                            readonly="1"
                            placeholder="Created Date"
                            string="Exam Created Date"
                        />
                        <field
                            name="write_date"
                            readonly="1"
                            placeholder="Last Update Date"
                            string="Exam Update Date"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar view Of Exam Information -->
    <record id="view_exam_exam_calendar" model="ir.ui.view">
        <field name="name">exam.exam.calendar</field>
        <field name="model">exam.exam</field>
        <field name="arch" type="xml">
            <calendar
                string="Exam Information Calendar"
                color="name"
                date_start="start_date"
            >
                <field name="name" />
            </calendar>
        </field>
    </record>

    <!-- Inherited Form View Of Exam's TimeTable -->
    <record id="extended_exam_time_table_form" model="ir.ui.view">
        <field name="name">extended.exam.time.table.form</field>
        <field name="model">time.table</field>
        <field name="inherit_id" ref="timetable.view_time_table_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/field[@name='year_id']" position="after">
                <field
                    name="timetable_type"
                    placeholder="Select Time Table Type"
                    readonly="1"
                />
            </xpath>
            <field name="timetable_ids" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('timetable_type','!=','regular')]}</attribute>
            </field>
            <field name="timetable_ids" position="after">
                <field
                    name="exam_timetable_line_ids"
                    nolabel="1"
                    attrs="{'invisible':[('timetable_type','!=','exam')]}"
                >
                    <tree editable="top">
                        <field name="exm_date" required="1" />
                        <field name="day_of_week" readonly="1" force_save="1" />
                        <field
                            name="subject_id"
                            options='{"no_open": True, "no_create": True}'
                        />
                        <field name="start_time" />
                        <field name="end_time" />
                        <field
                            name="teacher_id"
                            string="Supervisor"
                            options='{"no_open": True, "no_create": True}'
                        />
                        <field
                            name="class_room_id"
                            options='{"no_open": True, "no_create": True}'
                        />
                    </tree>
                </field>
            </field>
        </field>
    </record>

    <!-- Actions Of Form, Tree & Calendar Views Of Exam Information -->
    <record id="action_exam_exam_form" model="ir.actions.act_window">
        <field name="name">Regular Exam</field>
        <field name="res_model">exam.exam</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

    <!-- Menu Items Of Exam -->
    <menuitem id="menu_exam" name="Exams" parent="school.menu_ems" sequence="10" />
    <menuitem
        id="regular_exams_details"
        name="Regular Exams"
        parent="menu_exam"
        sequence="101"
    />
    <menuitem
        id="menu_exam_sub_form"
        name="Exams"
        parent="regular_exams_details"
        action="action_exam_exam_form"
        sequence="102"
    />

    <!-- Calendar view Of Additional Exam Information -->
    <record id="view_additional_exam_calendar" model="ir.ui.view">
        <field name="name">additional.exam.calendar</field>
        <field name="model">additional.exam</field>
        <field name="arch" type="xml">
            <calendar
                string="Additional Exam Information Calendar"
                color="color_name"
                date_start="exam_date"
            >
                <field name="name" />
                <field name="standard_id" />
                <field name="subject_id" />
            </calendar>
        </field>
    </record>

    <!-- Tree View Of Additional Exam Information -->
    <record id="view_additional_exam_tree" model="ir.ui.view">
        <field name="name">additional.exam.tree</field>
        <field name="model">additional.exam</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" select="1" />
                <field name="standard_id" />
                <field name="subject_id" select="1" />
                <field name="exam_date" />
            </tree>
        </field>
    </record>

    <!-- Form View Of Additional Exam Information -->
    <record id="view_additional_exam_form" model="ir.ui.view">
        <field name="name">additional.exam.form</field>
        <field name="model">additional.exam</field>
        <field name="arch" type="xml">
            <form string="Additional Exam Information">
                <sheet>
                    <group string="Additional Exam Information">
                        <group>
                            <field name="addtional_exam_code" />
                            <field
                                name="standard_id"
                                placeholder="Select Class"
                                widget="selection"
                                string="Class"
                            />
                            <field name="minimum_marks" required="1" />
                        </group>
                        <group>
                            <field name="name" placeholder="Exam Name" />
                            <field
                                name="subject_id"
                                placeholder="Select Subject"
                                widget="selection"
                                required="1"
                            />
                            <field name="maximum_marks" required="1" />
                        </group>
                    </group>
                    <group string="Examination Dates">
                        <group>
                            <field
                                name="exam_date"
                                placeholder="Exam Date"
                                string="Exam Date"
                            />
                            <field
                                name="write_date"
                                widget='date'
                                string='Updated Date'
                                placeholder="Last Updated Date"
                                readonly="1"
                            />
                        </group>
                        <group>
                            <field
                                name="create_date"
                                widget='date'
                                string='Created Date'
                                placeholder="Created Date"
                                readonly="1"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View Of Additional Exam -->
    <record id="view_additional_exam_search" model="ir.ui.view">
        <field name="name">additional.exam.search</field>
        <field name="model">additional.exam</field>
        <field name="arch" type="xml">
            <search string="Search">
                <group col="10" colspan="4">
                    <field name="standard_id" />
                </group>
                <newline />
                <group expand="1" string="Group By">
                    <filter
                        name="standard"
                        string="Standard"
                        help="By Name"
                        domain="[]"
                        context="{'group_by':'standard_id'}"
                    />
                    <separator orientation="vertical" />
                    <filter
                        name="subject"
                        string="Subject"
                        help="By Subject Name"
                        domain="[]"
                        context="{'group_by':'subject_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- Actions Of Form, Tree, Calendar Views Of Additional Exam Information -->
    <record id="action_additional_exam_form" model="ir.actions.act_window">
        <field name="name">Additional Exam</field>
        <field name="res_model">additional.exam</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

    <!-- Menu Item Of Additional Exam -->
    <menuitem
        id="additional_exam"
        name="Additional Exams"
        parent="menu_exam"
        sequence="103"
    />
    <menuitem
        id="menu_additional_exam_sub_form"
        name="Additional Exam"
        parent="additional_exam"
        action="action_additional_exam_form"
        sequence="104"
    />

    <!-- Tree View Of Result Information -->
    <record id="view_exam_result_tree" model="ir.ui.view">
        <field name="name">exam.result.tree</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="student_id" />
                <field name="standard_id" />
                <field name="s_exam_ids" />
                <field name="percentage" />
                <field name="total" />
                <field name="result" />
            </tree>
        </field>
    </record>

    <!-- Form View Of Result Information -->
    <record id="view_exam_result_form" model="ir.ui.view">
        <field name="name">exam.results.form</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <form string="Results" create="false">
                <header>
                    <button
                        name="result_confirm"
                        class="oe_stat_button fa fa-check"
                        string="Confirm"
                        states="draft"
                        type="object"
                        groups="school.group_school_administration,school.group_school_teacher"
                    />
                    <button
                        name="result_re_evaluation"
                        class="oe_stat_button fa fa-retweet"
                        string="Re-Evaluation"
                        states="confirm,re-access,re-access_confirm"
                        type="object"
                        groups="school.group_school_administration,school.group_school_teacher"
                    />
                    <button
                        name="re_evaluation_confirm"
                        class="oe_stat_button fa fa-refresh"
                        string="Re-Evaluation Confirm"
                        states="re-evaluation"
                        type="object"
                        groups="school.group_school_administration,school.group_school_teacher"
                    />
                    <field
                        name="state"
                        string="State"
                        widget="statusbar"
                        statusbar_visible="draft,confirm"
                        readonly="1"
                    />
                </header>
                <sheet>
                    <group col="2" string="Exam Details">
                        <field
                            name="s_exam_ids"
                            placeholder="Select Examination"
                            widget="selection"
                            domain="[('state','=','finished')]"
                            attrs="{'readonly' : [('state','!=','draft')]}"
                        />
                    </group>
                    <group>
                        <separator string="Student Details" colspan="4" />
                        <group col="2">
                            <field
                                name="student_id"
                                placeholder="Select Student"
                                context="{'exam':s_exam_ids}"
                                options="{&quot;no_create&quot;: True, &quot;no_open&quot;: True}"
                                domain="[('state','!=','draft')]"
                                readonly="1"
                            />
                            <field
                                name="standard_id"
                                placeholder="Select Standard"
                                widget="selection"
                                readonly="1"
                                string="Class"
                            />
                        </group>
                        <group col="2">
                            <field name="roll_no" readonly="1" string="Roll No" />
                            <field
                                name="grade_system"
                                string="Grade System"
                                required="1"
                                widget="selection"
                                attrs="{'readonly' : [('state','!=','draft')]}"
                            />
                        </group>
                    </group>
                    <field name="result_ids" nolabel="1" colspan="4">
                        <tree editable="bottom" create="false" delete="false">
                            <field
                                name="subject_id"
                                placeholder="Select Subject"
                                options="{'no_create': True, 'no_open': True}"
                                attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                                required="1"
                            />
                            <field
                                name="maximum_marks"
                                string="Maximum Marks"
                                attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                            />
                            <field
                                name="minimum_marks"
                                string="Minimum Marks"
                                attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                            />
                            <field
                                name="obtain_marks"
                                string="Obtain Marks"
                                attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                            />
                            <field name="state" invisible="1" />
                            <field name="grade_line_id" readonly="1" />
                            <field
                                name="marks_reeval"
                                attrs="{'invisible':[('state','not in',['re-evaluation','re-evaluation_confirm'])],'readonly':[('state','in',['re-evaluation_confirm'])]}"
                            />
                        </tree>
                        <form string="Subjects">
                            <group col="4">
                                <field
                                    name="subject_id"
                                    attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                                />
                                <field
                                    name="maximum_marks"
                                    attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                                />
                                <field
                                    name="minimum_marks"
                                    attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                                />
                                <field
                                    name="obtain_marks"
                                    attrs="{'readonly':[('state','in',['confirm','re-evaluation','re-evaluation_confirm'])]}"
                                />
                                <field
                                    name="marks_reeval"
                                    attrs="{'invisible':[('state','not in',['re-evaluation','re-evaluation_confirm'])],'readonly':[('state','in',['re-evaluation_confirm'])]}"
                                />
                                <field name="state" invisible="1" />
                                <field name="grade_line_id" readonly="1" />
                            </group>
                        </form>
                    </field>
                    <group>
                        <group>
                            <field name="total" />
                            <field name="percentage" string="Percentage" />
                        </group>
                        <group>
                            <field name="grade" string="Grade" />
                            <field name="result" string="Result" />
                            <field name='active' invisible='1' string="Active" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- KanBan View Of Exam Result -->
    <record id="exam_result_kanban_view" model="ir.ui.view">
        <field name="name">exam_result KANBAN</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <kanban default_group_by="standard_id" create="false">
                <field name="color" />
                <field name="student_id" />
                <field name="roll_no" />
                <field name="pid" />
                <field name="standard_id" />
                <field name="total" />
                <field name="percentage" />
                <field name="result" />
                <field name="grade" />
                <templates>
                    <t t-name="kanban-box">
                        <t
                            t-set="color"
                            t-value="kanban_color(record.color.raw_value || record.student_id.raw_value)"
                        />
                        <div
                            t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click"
                        >
                            <div class="oe_kanban_box oe_kanban_color_border">
                                <div
                                    class="oe_kanban_box_header oe_kanban_color_bgdark oe_kanban_color_border oe_kanban_draghandle"
                                >
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td
                                                class="oe_kanban_title1"
                                                align="left"
                                                valign="middle"
                                            >
                                                <field name="standard_id" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div
                                    class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border"
                                >
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td valign="top" align="left">
                                                <table class="oe_kanban_table">
                                                    <tr>
                                                        <td width="150">
                                                            <div
                                                                class="oe_kanban_title2"
                                                            >
                                                                <div>Student ID :
                                                                    <a type="open">
                                                                        <field
                                                                            name="pid"
                                                                        />
                                                                    </a>
                                                                </div>
                                                                <div>Student Name :
                                                                    <a type="open">
                                                                        <field
                                                                            name="student_id"
                                                                        />
                                                                    </a>
                                                                </div>
                                                                <div>Standard :
                                                                    <field
                                                                        name="standard_id"
                                                                    />
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div
                                                                class="oe_kanban_title3"
                                                            >
                                                                <div>Result :
                                                                    <field
                                                                        name="result"
                                                                    />
                                                                </div>
                                                                <div>Total :
                                                                    <field
                                                                        name="total"
                                                                    />
                                                                </div>
                                                                <div>Grade :
                                                                    <field
                                                                        name="grade"
                                                                    />
                                                                </div>
                                                                <div>Percentage :
                                                                    <field
                                                                        name="percentage"
                                                                    />
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div
                                    class="oe_kanban_buttons_set oe_kanban_color_border oe_kanban_color_bglight oe_kanban_box_show_onclick"
                                >
                                    <div class="oe_kanban_left">
                                        <a
                                            string="Edit"
                                            role="button"
                                            title="Edit"
                                            class="btn btn-sm btn-default fa fa-pencil"
                                            type="edit"
                                            groups="school.group_school_administration"
                                        />
                                    </div>
                                    <br class="oe_kanban_clear" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

