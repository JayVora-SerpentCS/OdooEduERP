<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>

<odoo>
    <data noupdate="1">
        <!-- student.evaluation -->
        <record id="student_evaluation_2" model="school.evaluation">
            <field name="student_id" ref="school.demo_student_student_7"/>
            <field name="type">student</field>
            <field name="date" eval="(DateTime.today())"/>
            <!-- <field name="evaluator_id" ref="school.demo_school_teacher_1"/> -->
        </record>
        <record id="student_evaluation_4" model="school.evaluation">
            <field name="student_id" ref="school.demo_student_student_6"/>
            <field name="type">student</field>
            <field name="date" eval="(DateTime.today())"/>
            <!-- <field name="evaluator_id" ref="school.demo_school_teacher_2"/> -->
        </record>
        <record id="student_evaluation_5" model="school.evaluation">
            <field name="student_id" ref="school.demo_student_student_5"/>
            <field name="type">student</field>
            <field name="date" eval="(DateTime.today())"/>
            <!-- <field name="evaluator_id" ref="school.demo_school_teacher_3"/> -->
        </record>
        <record id="school_teacher_evaluations" model="school.evaluation">
            <field name="teacher_id" ref="school.demo_school_teacher_3"/>
            <field name="type">faculty</field>
            <field name="date" eval="(DateTime.today())"/>
        </record>
        <record id="school_teacher_evaluations_2" model="school.evaluation">
            <field name="teacher_id" ref="school.demo_school_teacher_2"/>
            <field name="type">faculty</field>
            <field name="date" eval="(DateTime.today())"/>
        </record>
        <!-- Rating evalution -->
        <record id="teacher_rating_evaluation_excellent" model="rating.rating">
            <field name="point">5</field>
            <field name="rating">Excellent</field>
        </record>
        <record id="teacher_rating_evaluation_very_good" model="rating.rating">
            <field name="point">4</field>
            <field name="rating">Very Good</field>
        </record>
        <record id="teacher_rating_evaluation_good" model="rating.rating">
            <field name="point">3</field>
            <field name="rating">Good</field>
        </record>
        <record id="teacher_rating_evaluation_average" model="rating.rating">
            <field name="point">2</field>
            <field name="rating">Average</field>
        </record>
        <record id="teacher_rating_evaluation_poor" model="rating.rating">
            <field name="point">1</field>
            <field name="rating">Poor</field>
        </record>
        <!-- school.evaluation.template -->
        <record id="school_evaluation_template_1" model="school.evaluation.template">
            <field name="desc">How do you plan to assess student achievement of the goals?</field>
            <field name="type">student</field>
            <field name="rating_line_ids" eval="[(6,0,[ref('teacher_rating_evaluation_excellent'),ref('teacher_rating_evaluation_very_good'),ref('teacher_rating_evaluation_good'),ref('teacher_rating_evaluation_average'),ref('teacher_rating_evaluation_poor')])]"/>
        </record>
        <record id="school_evaluation_template_2" model="school.evaluation.template">
            <field name="desc">Communication with students</field>
            <field name="type">faculty</field>
            <field name="rating_line_ids" eval="[(6,0,[ref('teacher_rating_evaluation_excellent'),ref('teacher_rating_evaluation_very_good'),ref('teacher_rating_evaluation_good'),ref('teacher_rating_evaluation_average'),ref('teacher_rating_evaluation_poor')])]"/>
        </record>
        <record id="school_student_evaluation_template" model="school.evaluation.template">
            <field name="desc">Respect for student</field>
            <field name="type">student</field>
            <field name="rating_line_ids" eval="[(6,0,[ref('teacher_rating_evaluation_excellent'),ref('teacher_rating_evaluation_very_good'),ref('teacher_rating_evaluation_good'),ref('teacher_rating_evaluation_average'),ref('teacher_rating_evaluation_poor')])]"/>
        </record>
        <record id="school_student_evaluation_template_2" model="school.evaluation.template">
            <field name="desc">Communication of Information</field>
            <field name="type">student</field>
            <field name="rating_line_ids" eval="[(6,0,[ref('teacher_rating_evaluation_excellent'),ref('teacher_rating_evaluation_very_good'),ref('teacher_rating_evaluation_good'),ref('teacher_rating_evaluation_average'),ref('teacher_rating_evaluation_poor')])]"/>
        </record>
        <record id="school_evaluation_template_teacher" model="school.evaluation.template">
            <field name="desc">Effort put in the subject</field>
            <field name="type">faculty</field>
            <field name="rating_line_ids" eval="[(6,0,[ref('teacher_rating_evaluation_excellent'),ref('teacher_rating_evaluation_very_good'),ref('teacher_rating_evaluation_good'),ref('teacher_rating_evaluation_average'),ref('teacher_rating_evaluation_poor')])]"/>
        </record>
        <record id="school_evaluation_template_teacher_question" model="school.evaluation.template">
            <field name="desc">Based on your daily interactions with your students, how do you think they perceive you?</field>
            <field name="type">faculty</field>
            <field name="rating_line_ids" eval="[(6,0,[ref('teacher_rating_evaluation_excellent'),ref('teacher_rating_evaluation_very_good'),ref('teacher_rating_evaluation_good'),ref('teacher_rating_evaluation_average'),ref('teacher_rating_evaluation_poor')])]"/>
        </record>
     </data>
</odoo>
