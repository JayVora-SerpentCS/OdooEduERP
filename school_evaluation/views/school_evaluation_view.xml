<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>

<odoo>
        <!-- Action Of Form & Tree Views Of Student Evaluation -->
        <record id="action_student_eval_form" model="ir.actions.act_window">
            <field name="name">Student Evaluation</field>
            <field name="res_model">school.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','student')]</field>
            <field name="context">{'default_type':'student','search_default_student_id': active_id}</field>
        </record>
        <record id="action_student_eval_form_actions" model="ir.actions.act_window">
            <field name="name">Student Evaluation</field>
            <field name="res_model">school.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','student')]</field>
            <field name="context">{'default_type':'student','search_default_student_id': active_id}</field>
        </record>
        <!-- Inherited Form View Of Student -->
        <record id="view_student_student_form2" model="ir.ui.view">
            <field name="name">student.student.form</field>
            <field name="model">student.student</field>
            <field name="inherit_id" ref="school.view_student_student_form_1"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='buttons']" position="inside">
                        <button name="%(action_student_eval_form_actions)d" type="action" class="oe_stat_button" attrs="{'invisible':[('state', 'in', ['draft','terminate','alumni','cancel'])]}" groups="school.group_school_administration,school.group_school_teacher,school.group_school_student">
                             <img src="/school_evaluation/static/description/e.png" style="height:25px;width:50px;float:left;"/>
                                <lable style = "">Evaluation</lable>
                        </button>
                    </xpath>
                </data>
            </field>
        </record>
        <!-- Tree View Of Student Evaluation -->
        <record id="view_student_evaluation_tree" model="ir.ui.view">
            <field name="name">school.evaluation.tree</field>
            <field name="model">school.evaluation</field>
            <field name="arch" type="xml">
                <tree string="Student Evaluation">
                    <field name="student_id"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        <!-- Search View  Of Student Evaluation -->
        <record id="view_student_eval_search" model="ir.ui.view">
            <field name="name">school.evaluation.search</field>
            <field name="model">school.evaluation</field>
            <field name="arch" type="xml">
                <search string="Student Evaluation Search">
                    <field name="student_id"/>
                    <field name="date"/>
                    <field name="type"/>
                    <newline/>
                    <group expand="1" string="Group By">
                        <filter string="Type" name="type" context="{'group_by':'type'}"/>
                        <filter string="Student" name="students" context="{'group_by':'student_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- Form View Of Student Evaluation -->
        <record id="view_student_evaluation_form" model="ir.ui.view">
            <field name="name">school.evaluation.form</field>
            <field name="model">school.evaluation</field>
            <field name="arch" type="xml">
                <form string="Student Evaluation">
                    <header>
                        <button name="set_start" string="Start" type="object" states="draft" class="oe_highlight fa fa-play" groups="school.group_school_administration,school.group_school_teacher"/>
                        <button name="set_finish" string="Finish" class="fa fa-step-forward" type="object" states="start" groups="school.group_school_administration,school.group_school_teacher"/>
                        <button name="set_cancel" string="Cancel" class="fa fa-ban" type="object" states="start,draft" groups="school.group_school_administration,school.group_school_teacher"/>
                        <button name="set_draft" string="Set to Draft" class="fa fa-play" type="object" states="cancelled" groups="school.group_school_administration,school.group_school_teacher"/>
                        <field name="state" readonly="1" widget="statusbar"/>
                    </header>
                    <sheet>
                        <separator string="Student Evaluation"/>
                        <group attrs="{'readonly': [('state','in',['finished', 'cancelled'])]}">
                            <group>
                                 <field name="student_id" placeholder="Select Or Create Student Name" domain="[('state','=','done')]"
                                     attrs="{'readonly':[('state','not in','draft')],'required':[('type','=','student')]}" options="{&quot;no_create&quot;: True}"/>
                                 <field name="date" style="width: 84%" attrs="{'readonly':[('state','not in','draft')]}"/>
                            </group>
                            <group>
                                 <field name="type" readonly="1"/>
                                 <field name="username"/>
                                 <button name="get_record" type='object' class="oe_inline oe_stat_button"
                                    attrs="{'invisible' : [('state', '!=', 'draft')]}"
                                    groups="school.group_school_administration,school.group_school_teacher">
                                <img src="/school_evaluation/static/description/index1.png" style="height:25px;width:50px;float:left;"/>
                                <lable style="">Get Question</lable>
                            </button>
                            </group>
                        </group>
                        <newline />
                        <notebook colspan="4">
                            <page string="General">
                                <field name="eval_line" nolabel='1'  context="{'type':type}" attrs="{'readonly':[('state','not in','draft')]}">
                                    <tree string="Evaluation Line" editable='top'>
                                        <field name="stu_eval_id" domain="[('type','=',context.get('type'))]" options="{&quot;no_create&quot;: True}"/>
                                        <field name="point_id" options="{&quot;no_create&quot;: True}"/>
                                        <field name="rating"/>
                                    </tree>
                                    <form string="Evaluation Line">
                                        <field name="stu_eval_id" placeholder="Select Or Create Question" options="{&quot;no_create&quot;: True}"/>
                                        <field name="point_id" placeholder="Select Or Create Rating" options="{&quot;no_create&quot;: True}"/>
                                        <field name="rating" placeholder="Enter Remarks"/>
                                    </form>
                                </field>
                                <group colspan="4">
                                    <field name="total"/>
                                    <newline/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Teacher Evaluation Form View -->
        <record id="teacher_evaluation_form" model="ir.ui.view">
            <field name="name">teacher.evaluation.form</field>
            <field name="model">school.evaluation</field>
            <field name="arch" type="xml">
                <form name="teacher_evaluation" string="Teacher Evaluation">
                    <header>
                        <button name="set_start" string="Start" type="object" states="draft" class="oe_highlight fa fa-play" groups="school.group_school_administration"/>
                        <button name="set_finish" string="Finish" class="fa fa-step-forward" type="object" states="start" groups="school.group_school_administration"/>
                        <button name="set_cancel" string="Cancel" class="fa fa-ban" type="object" states="start,draft" groups="school.group_school_administration"/>
                        <button name="set_draft" string="Set to Draft" class="fa fa-play" type="object" states="cancelled" groups="school.group_school_administration"/>
                        <field name="state" readonly="1" widget="statusbar"/>
                    </header>
                    <sheet>
                        <separator string="Teacher Evaluation"/>
                        <group attrs="{'readonly': [('state','in',['finished', 'cancelled'])]}">
                            <group>
                                <field name="student_id" required="0" invisible="1"/>
                                <field name="teacher_id" placeholder="Select Or Create Teacher Name"
                                        attrs="{'readonly':[('state','not in','draft')],
                                                'required': [('type','=','faculty')]}" options="{&quot;no_create&quot;: True}"/>
                                <field name="date" style="width: 84%%" attrs="{'readonly':[('state','not in','draft')]}"/>
                            </group>
                            <group>
                                 <field name="type" readonly="1"/>
                                 <field name="username" attrs="{'readonly':[('state','not in','draft')]}" readonly="1"/>
                                 <button name="get_record" type='object' class="oe_inline oe_stat_button"
                                    attrs="{'invisible' : [('state', '!=', 'draft')]}"
                                    groups="school.group_school_administration">
                                <img src="/school_evaluation/static/description/index1.png" style="height:25px;width:50px;float:left;"/>
                                <lable style="">Get Question</lable>
                                </button>
                            </group>
                        </group>
                        <newline/>
                        <notebook colspan="4">
                            <page string="General">
                                <field name="eval_line" nolabel='1' context="{'type':type}" attrs="{'readonly':[('state','not in','draft')]}">
                                    <tree string="Evaluation Line" editable='top'>
                                        <field name="stu_eval_id" domain="[('type','=',context.get('type'))]" options="{&quot;no_create&quot;: True}"/>
                                        <field name="point_id" options="{&quot;no_create&quot;: True}"/>
                                        <field name="rating"/>
                                    </tree>
                                    <form string="Evaluation Line">
                                        <field name="stu_eval_id" placeholder="Select Or Create Question" options="{&quot;no_create&quot;: True}"/>
                                        <field name="point_id" placeholder="Select Or Create Rating" options="{&quot;no_create&quot;: True}"/>
                                        <field name="rating" placeholder="Enter Remarks"/>
                                    </form>
                                </field>
                                <group colspan="4">
                                    <field name="total"/>
                                    <newline/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View of Teacher Evaluation -->
        <record id="view_teacher_evaluation_tree" model="ir.ui.view">
            <field name="name">teacher.evaluation.tree</field>
            <field name="model">school.evaluation</field>
            <field name="arch" type="xml">
                <tree name="teacher_evaluation" string="Teacher Evaluation">
                    <field name="teacher_id"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        
        <!-- Search View  Of Student Evaluation -->
        <record id="view_teacher_eval_search" model="ir.ui.view">
            <field name="name">schoolteacher.evaluation.search</field>
            <field name="model">school.evaluation</field>
            <field name="arch" type="xml">
                <search string="Student Evaluation Search">
                    <group colspan="6" col="4">
                        <field name="teacher_id"/>
                        <field name="date"/>
                    </group>
                    <separator orientation="vertical"/>
                    <newline />
                    <group expand="0" string="Group By..." colspan="6" col="4">
                        <filter string="Type" icon="terp-stock_symbol-selection" name="type" context="{'group_by':'type'}"/>
                        <filter string="Teacher" icon="terp-personal" name="student_id" context="{'group_by':'teacher_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        
         <record id="action_teacher_eval" model="ir.actions.act_window">
            <field name="name">Teacher Evaluation</field>
             <field name="res_model">school.evaluation</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="domain">[('type','=','faculty')]</field>
             <field name="context">{'default_type':'faculty'}</field>
             <field name="search_view_id" ref="view_teacher_eval_search"/>
        </record>
        
         <record id="action_teacher_eval_new" model="ir.actions.act_window">
            <field name="name">Teacher Evaluation Finished</field>
             <field name="res_model">school.evaluation</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="domain">[('type','=','faculty'),('state','=','finished')]</field>
             <field name="context">{'default_type':'faculty'}</field>
             <field name="search_view_id" ref="view_teacher_eval_search"/>
        </record>
        
        <record id="action_view_teacher_evaluation_tree_new" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_teacher_evaluation_tree" />
            <field name="act_window_id" ref="action_teacher_eval_new" />
        </record>
        <record id="action_view_teacher_evaluation_form_new" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="teacher_evaluation_form" />
            <field name="act_window_id" ref="action_teacher_eval_new" />
        </record>
        
        <record id="action_teacher_eval_new_draft" model="ir.actions.act_window">
            <field name="name">Teacher Evaluation New Draft</field>
             <field name="res_model">school.evaluation</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="domain">[('type','=','faculty'),('state','=','draft')]</field>
             <field name="context">{'default_type':'faculty'}</field>
             <field name="search_view_id" ref="view_teacher_eval_search"/>
        </record>
        
        <record id="action_view_teacher_evaluation_tree_new_draft" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_teacher_evaluation_tree" />
            <field name="act_window_id" ref="action_teacher_eval_new_draft" />
        </record>
        <record id="action_view_teacher_evaluation_form_new_draft" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="teacher_evaluation_form" />
            <field name="act_window_id" ref="action_teacher_eval_new_draft" />
        </record>
        
        <!-- Student Evaluation Template Search View -->
        <record id="view_student_eval_temp_search" model="ir.ui.view">
            <field name="name">school.evaluation.template.search</field>
            <field name="model">school.evaluation.template</field>
            <field name="arch" type="xml">
                <search string="Student Evaluation Template Search">
                    <group colspan="4">
                        <field name="desc"/>
                    </group>
                    <newline />
                    <group expand="0" string="Group By..." colspan="6" col="4">
                        <filter string="Type" icon="terp-stock_symbol-selection" name="type" context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- Tree View Of Student Evaluation Template -->
        <record id="view_student_eval_template_tree" model="ir.ui.view">
            <field name="name">school.evaluation.template.tree</field>
            <field name="model">school.evaluation.template</field>
            <field name="arch" type="xml">
                <tree string="Student Evaluation Template ">
                    <field name="desc"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>
        <!-- Form View Of Student Evaluation Template -->
        <record id="view_student_eval_template_form" model="ir.ui.view">
            <field name="name">school.evaluation.template.form</field>
            <field name="model">school.evaluation.template</field>
            <field name="arch" type="xml">
                <form string="Student Evaluation Template">
                    <sheet>
                        <separator string="Evaluation Template"/>
                        <group colspan="4">
                            <field name="desc" placeholder="Enter Description"/>
                            <field name="type"/>
                        </group>
                        <field name="rating_line" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Form View Of Student Rating -->
        <record id="view_student_rating_form" model="ir.ui.view">
            <field name="name">student.rating.form</field>
            <field name="model">rating.rating</field>
            <field name="arch" type="xml">
                <form string="Student Rating">
                    <sheet>
                        <separator string="Student Rating" />
                        <group col="4" colspan="2">
                            <field name="point" placeholder="Enter Rating Point" />
                            <field name="rating" placeholder="Enter Remarks" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View Of Student Rating -->
        <record id="view_student_rating_tree" model="ir.ui.view">
            <field name="name">student.rating.tree</field>
            <field name="model">rating.rating</field>
            <field name="arch" type="xml">
                <tree string="Student Rating">
                    <field name="point"/>
                    <field name="rating"/>
                </tree>
            </field>
        </record>
        <!-- Search View Of Student Rating -->
        <record id="view_student_rating_search" model="ir.ui.view">
            <field name="name">student.rating.search</field>
            <field name="model">rating.rating</field>
            <field name="arch" type="xml">
                <search string="Student Rating">
                    <field name="point"/>
                    <field name="rating"/>
                </search>
            </field>
        </record>

        <!-- Actions Of Form & Tree Views Of Student Evaluation -->
        <record id="action_student_eval" model="ir.actions.act_window">
            <field name="name">Student Evaluation</field>
            <field name="res_model">school.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','student')]</field>
            <field name="context">{'default_type':'student'}</field>
        </record>

        <!-- Actions Of Form & Tree Views Of Student Evaluation Template -->
        <record id="action_student_eval_temp" model="ir.actions.act_window">
            <field name="name">Evaluation Templates</field>
            <field name="res_model">school.evaluation.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Actions Of Form & Tree Views Of Student Rating -->
        <record id="action_student_rating" model="ir.actions.act_window">
            <field name="name">Student Rating</field>
            <field name="res_model">rating.rating</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Actions View of the School Student Tree View -->
        <record id="action_view_student_evaluation_tree" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_student_evaluation_tree" />
            <field name="act_window_id" ref="action_student_eval_form" />
        </record>

        <!-- Actions View of the School Student Form View -->
        <record id="action_view_student_evaluation_form" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_student_evaluation_form" />
            <field name="act_window_id" ref="action_student_eval_form" />
        </record>
        
        <!-- Actions View of the School Teacher Tree View -->
        <record id="action_view_teacher_evaluation_tree" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_teacher_evaluation_tree" />
            <field name="act_window_id" ref="action_teacher_eval" />
        </record>

        <!-- Actions View of the School Teacher Form View -->
        <record id="action_view_teacher_evaluation_form" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="teacher_evaluation_form" />
            <field name="act_window_id" ref="action_teacher_eval" />
        </record>

        <record id="action_student_eval_finished" model="ir.actions.act_window">
            <field name="name">Student Evaluation Finished</field>
            <field name="res_model">school.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','student'),('state','=','finished')]</field>
            <field name="context">{'default_type':'student'}</field>
        </record>
        
        <!-- Actions View of the School Student Tree View -->
        <record id="action_view_student_evaluation_tree_finished" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_student_evaluation_tree" />
            <field name="act_window_id" ref="action_student_eval_finished" />
        </record>

        <!-- Actions View of the School Student Form View -->
        <record id="action_view_student_evaluation_form_finished" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_student_evaluation_form" />
            <field name="act_window_id" ref="action_student_eval_finished" />
        </record>
        
        <record id="action_student_eval_draft" model="ir.actions.act_window">
            <field name="name">Student Evaluation Draft</field>
            <field name="res_model">school.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','student'),('state','=','draft')]</field>
            <field name="context">{'default_type':'student'}</field>
        </record>
        
        <!-- Actions View of the School Student Tree View -->
        <record id="action_view_student_evaluation_tree_draft" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_student_evaluation_tree" />
            <field name="act_window_id" ref="action_student_eval_draft" />
        </record>

        <!-- Actions View of the School Student Form View -->
        <record id="action_view_student_evaluation_form_draft" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_student_evaluation_form" />
            <field name="act_window_id" ref="action_student_eval_draft" />
        </record>
        
        <!-- Menu Items of Student and Teacher Evaluation -->
        <menuitem id="menu_stu_eval" name="Evaluations" parent="school.menu_ems" sequence="8"/>
        <menuitem id="menu_evals" name="Student Evaluation" parent="menu_stu_eval" action="action_student_eval"
                  groups="school.group_school_administration,school.group_school_student,school.group_school_teacher,school.group_school_parent" sequence="9"/>
        <menuitem id="menu_teacher_eval" name="Teacher Evaluation" parent="menu_stu_eval" action="action_teacher_eval" groups="school.group_school_administration,school.group_school_teacher" sequence="10"/>
        <menuitem id="menu_eval_temps" name="Evaluation Templates" parent="menu_stu_eval" action="action_student_eval_temp"
                  groups="school.group_school_administration" sequence="11"/>
        <menuitem id="menu_rating" name="Rating" parent="school.menu_configuration" action="action_student_rating"/>
</odoo>
